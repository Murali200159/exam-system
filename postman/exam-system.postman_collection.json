            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\"answers\": {\"questionId1\": \"option1\", \"questionId2\": \"option2\"}}"
        },
        "url": {
          "raw": "{{baseUrl}}/exam/submit",
          "host": ["{{baseUrl}}"],
          "path": ["exam", "submit"]
