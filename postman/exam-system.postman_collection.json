      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/exam/questions",
          "host": ["{{baseUrl}}"],
          "path": ["exam", "questions"]
        }
      }
    },
